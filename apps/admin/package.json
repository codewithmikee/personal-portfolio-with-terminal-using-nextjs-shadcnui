{
  "name": "portfolio-builder-admin",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Mikiyas Birhanu",
    "email": "codewithmikee@gmail.com",
    "url": "https://github.com/codewithmikee/personal-portfolio-with-terminal-using-nextjs-shadcnui.git"
  },
  "scripts": {
    "build": "pnpm build:data && next build",
    "build:data": "node scripts/build-data.js",
    "validate:data": "node scripts/validate-data.js",
    "dev": "next dev",
    "lint": "next lint",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "export:static": "pnpm build && next export",
    "db:seed": "tsx prisma/seed.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:reset": "prisma migrate reset --force",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma db push --force-reset",
    "db:studio": "prisma studio",
    "postbuild": "pnpm db:generate",
    "postinstall": "pnpm db:generate",
    "deploy:setup": "pnpm db:deploy && pnpm db:seed",
    "deploy:verify": "node scripts/health-check.js",
    "deploy:complete": "pnpm deploy:setup && pnpm deploy:verify",
    "cache:clear": "rm -rf .next/cache",
    "cache:warm": "node scripts/cache-warm.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f postgres",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    "setup:postgres": "node scripts/setup-postgres.js"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@prisma/client": "^6.16.2",
    "@prisma/extension-accelerate": "^2.0.2",
    "@radix-ui/react-alert-dialog": "1.1.4",
    "@radix-ui/react-checkbox": "latest",
    "@radix-ui/react-dialog": "1.1.4",
    "@radix-ui/react-dropdown-menu": "2.1.4",
    "@radix-ui/react-label": "latest",
    "@radix-ui/react-popover": "1.1.4",
    "@radix-ui/react-select": "latest",
    "@radix-ui/react-separator": "1.1.1",
    "@radix-ui/react-slot": "1.1.1",
    "@radix-ui/react-tabs": "latest",
    "@radix-ui/react-toast": "1.2.4",
    "@radix-ui/react-tooltip": "1.1.6",
    "@vercel/analytics": "latest",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "geist": "latest",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.2",
    "lucide": "^0.544.0",
    "lucide-react": "^0.454.0",
    "next": "14.2.16",
    "next-themes": "^0.4.6",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.60.0",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "3.25.67",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.9",
    "@types/node": "^22",
    "@types/pg": "^8.11.10",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "pg": "^8.12.0",
    "postcss": "^8.5",
    "prisma": "^6.16.2",
    "tailwindcss": "^4.1.9",
    "tsx": "^4.20.5",
    "tw-animate-css": "1.3.3",
    "typescript": "^5"
  }
}
